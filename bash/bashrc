# set path
PATH=$HOME/bin/vim/bin:$PATH

# personal PS1 prompt
PS1="\n\[\e[1;35m\]\u\[\e[0;33m\] at \[\e[1;36m\]\h\[\e[0;33m\]:\[\e[0;33m\]\w\[\e[0;37m\]\n \[\e[0;33m\]$ \[\e[0;00m\]"

# alias vim
if [[ -a $(which nvim) ]]
    then
    alias vim="nvim"
fi

# ll
alias ll="ls -AlFG"

# sets dot aliases
alias ..="cv .."
alias ...="cv ../.."
alias ....="cv ../../.."
alias .....="cv ../../../.."
alias ......="cv ../../../../.."
alias .......="cv ../../../../../.."

# makes 'cs' cd and ll
function cs () {
    cd "$1" && ll
    }

# new cv
function cv () {
    if [[ -a "$1" ]]
    then
        if [[ -d "$1" ]]
        then
            cd "$1" &&
            ll
        elif [[ -f "$1" ]]
        then
            cd $(dirname "$1") &&
            nvim $(basename "$1")
        else
            echo "neither a directory nor a file"
        fi
    else
        if [[ "$1" == */ ]]
        then
            mkdir -p "$1" &&
            cd "$1"
        else
            mkdir -p $(dirname "$1") &&
            cd $(dirname "$1") &&
            nvim $(basename "$1")
        fi
    fi
}

# makes cc a smart cd
function cc () {
    if [[ -d "$1" ]]
    then
    cs "$1"
    else
    cv "$1"
    fi
    }

# makes task
function up () {
    if [[ -d "$1" ]]
    then
        cv "$1"
    elif [[ -d "../$1" ]]
    then
        cv "$1"
    elif [[ -d "../../$1" ]]
    then
        cv "$1"
    fi
}

# makes gs git status
alias gs="git status"

# makes gc
alias gc="git commit -m"

# makes gA add
alias gA="git add -A && git status"
